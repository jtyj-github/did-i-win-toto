generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TotoTicket {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  numbers Int[]
  type    System
  date    String
}

enum System {
  SYSTEM6
  SYSTEM7
  SYSTEM8
  SYSTEM9
  SYSTEM10
  SYSTEM11
  SYSTEM12
  SYSTEMROLL
}

model TotoResult {
  id            String            @id @default(auto()) @map("_id") @db.ObjectId
  drawNumber    Int
  drawDate      String
  winningNum    String[]
  additionalNum String
  winningShares TotoWinningPool[]
}

model TotoWinningPool {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  group    String
  prize    Float
  winners  Int
  resultId String      @db.ObjectId
  result   TotoResult  @relation(fields: [resultId], references: [id])
}